<div class="form">
  <% form_with model: attendee do |form| %>
  <div class="form-group">
    <%= form.label :full_name %> <%= form.text_field :full_name %>
  </div>
  <div class="form-group">
    <%= form.label :email_address %> <%= form.text_field :email %>
  </div>
  <div class="form-group">
    <%= form.submit 'Reservation', class: 'btn btn-outline-primary' %>
  </div>
  <% end %>
</div>
