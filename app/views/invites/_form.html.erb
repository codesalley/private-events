<div class="form ">
  <%= form_with model: invite do |form| %>
  <div class="form-group mb-3">
    <%= form.label :event_ID%> 
    <%= form.select(:attended_event_id, options_for_select(@event_options),{}, {class:'form-select form-select-md mb-3'}) %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :guest_email %> 
    <%= form.select(:attendee_id, options_for_select(@guest_options),{}, {class:'form-select form-select-md mb-3'}) %>
    
  </div>
  <div class="form-group mb-3">
    <%= form.submit 'Invite', class: 'btn btn-outline-primary w-100' %>
  </div>
  <% end %>
</div>