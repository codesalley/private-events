<div class="form ">
    <%= form_with model: invite do |form| %>
    <div class="form-group mb-3">
      <%= form.label :attended_event_id%> 
      <%= form.number_field :attended_event_id, class: 'form-control' %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :attendee_id %> 
      <%= form.number_field :attendee_id, input_html: { autocomplete: "event_attendee_id" } , class: 'form-control' %>
    </div>
    <div class="form-group mb-3">
      <%= form.submit 'Invite', class: 'btn btn-outline-primary w-100' %>
    </div>
    <% end %>
  </div>